block content
    div.row
        div.col.search
            form(role='form' method='post')
                .form-group
                    input(type='hidden', name='_csrf', value=_csrf)
                .form-group
                    label(for='title') Title:
                    input#title.form-control(type='text' name='title' placeholder='Search')
                .form-group
                    //- label(for='category') Category:
                    //- select#category.form-control(type'text' name='category')
                    //-     option(value="") Any
                    //-     for category  in categories
                    //-         option(value= category._id)=category.name
                    input(type='hidden' name='category' value="")
                .form-group
                    label(for='season') Season:
                    select#season.form-control(type'text' name='season')
                        option(value="") Any
                        for season in seasons
                            option(value=season._id)= season.name
                button.btn.btn-default(type='submit') Search